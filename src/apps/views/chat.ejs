<script src="/socket.io/socket.io.js"></script>
<script>
  // === Chat live khÃ¡ch â†” admin ===
  const userRole = "<%= role %>" || "customer";

  if (!window.chatSocket) {
    window.chatSocket = io();
    window.chatSocket.on("receiveMessage", appendLiveMessage);
  }
  const socket = window.chatSocket;

  const chatToggle = document.getElementById("chat-toggle");
  const chatWindow = document.getElementById("chat-window");
  const closeChat = document.getElementById("close-chat");
  const chatBody = document.getElementById("chat-body");
  const sendBtn = document.getElementById("send-btn");
  const msgInput = document.getElementById("chat-message");

  chatToggle.onclick = () => chatWindow.classList.toggle("hidden");
  closeChat.onclick = () => chatWindow.classList.add("hidden");
  sendBtn.onclick = sendMessage;
  msgInput.addEventListener("keypress", (e) => {
    if (e.key === "Enter") sendMessage();
  });

  function sendMessage() {
    const text = msgInput.value.trim();
    if (!text) return;
    const msgData = {
      sender: userRole,
      text,
      time: new Date().toLocaleTimeString(),
    };
    appendLiveMessage(msgData);
    if (userRole === "admin") socket.emit("adminChat", msgData);
    else socket.emit("customerChat", msgData);
    msgInput.value = "";
  }

  function appendLiveMessage({ sender, text, time }) {
    const div = document.createElement("div");
    div.classList.add("message");
    if (sender === userRole) {
      div.classList.add("self"); // bÃªn pháº£i
    } else {
      div.classList.add("other"); // bÃªn trÃ¡i
    }

    const roleLabel =
      sender === userRole
        ? "Báº¡n"
        : sender === "customer"
        ? "KhÃ¡ch hÃ ng"
        : "Há»— trá»£ viÃªn";

    console.log("roleLabel", roleLabel);
    console.log("sender", sender);

    div.innerHTML = `<small>${roleLabel} â€¢ ${time}</small><div class="bubble">${text}</div>`;
    chatBody.appendChild(div);
    chatBody.scrollTop = chatBody.scrollHeight;
  }

  // === Chatbot Hana ===
  const mini = document.getElementById("chatbot-mini");
  const container = document.getElementById("chatbot-container");
  const closeBtn = document.getElementById("chatbot-close");
  const body = document.getElementById("chatbot-body");
  const input = document.getElementById("chatbot-message");
  const sendBtnBot = document.getElementById("chatbot-send");

  let firstOpen = true;
  mini.addEventListener("click", () => {
    container.style.transform = "scale(1)";
    mini.style.display = "none";
    if (firstOpen) {
      appendBotMessage("Xin chÃ o! MÃ¬nh lÃ  Hana, báº¡n cáº§n tÆ° váº¥n gÃ¬ hÃ´m nay?");
      firstOpen = false;
    }
  });
  closeBtn.addEventListener("click", () => {
    container.style.transform = "scale(0)";
    mini.style.display = "flex";
  });

  sendBtnBot.addEventListener("click", () => sendBotMessage(input.value));
  input.addEventListener("keydown", (e) => {
    if (e.key === "Enter") sendBotMessage(input.value);
  });

  async function sendBotMessage(message) {
    if (!message) return;
    appendBotMessage(message, "user");
    input.value = "";
    const typingElem = appendBotMessage("...", "bot", true);
    try {
      const res = await fetch("/api/chatbot/ask", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ message }),
      });
      const data = await res.json();
      typingElem.querySelector(".bubble").innerText = data.reply;
      typingElem.classList.remove("typing");
    } catch (e) {
      typingElem.querySelector(".bubble").innerText =
        "Xin lá»—i, há»‡ thá»‘ng Ä‘ang báº­n.";
      console.error(e);
    }
  }

  function appendBotMessage(text, sender = "bot", typing = false) {
    const msg = document.createElement("div");
    msg.classList.add("message", sender);

    const avatar = document.createElement("img");
    avatar.className = "avatar";
    avatar.src =
      sender === "bot"
        ? "../uploads/images/configs/banner-3.png"
        : "/static/images/user.png";

    const bubble = document.createElement("div");
    bubble.className = "bubble";
    bubble.innerText = text;

    if (sender === "bot") msg.appendChild(avatar);
    msg.appendChild(bubble);
    if (sender === "user") msg.appendChild(avatar);

    body.appendChild(msg);
    body.scrollTop = body.scrollHeight;

    if (typing) msg.classList.add("typing");

    return msg;
  }
</script>

